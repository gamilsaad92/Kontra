{
  "openapi": "3.0.3",
  "info": {
    "title": "Kontra API",
    "version": "0.1.0"
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Health check",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/applications": {
      "get": {
        "summary": "List loan applications",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "summary": "Create loan application",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/escrows": {
      "post": {
        "summary": "Create escrow",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/escrows/{loanId}": {
      "get": {
        "summary": "Get escrows for loan",
        "parameters": [
          {
            "name": "loanId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ai/ingest": {
      "post": {
        "summary": "Ingest document for OCR/LLM",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ai/recommend": {
      "post": {
        "summary": "Get loan recommendation",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/analytics/portfolio": {
      "get": {
        "summary": "Portfolio summary",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/trades": {
      "post": {
        "summary": "Create trade (feature-flagged)",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/trades/webhook": {
      "post": {
        "summary": "Trade webhook",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/feedback": {
      "post": {
        "summary": "Operator feedback for model improvement",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
        },
    "/olbs/coupon": {
      "get": {
        "summary": "Calculate OLB coupon",
        "parameters": [
          {
            "name": "occupancy",
            "in": "query",
            "required": true,
            "schema": { "type": "number" }
          },
          {
            "name": "baseRate",
            "in": "query",
            "required": false,
            "schema": { "type": "number" }
          },
          {
            "name": "floor",
            "in": "query",
            "required": false,
            "schema": { "type": "number" }
          },
          {
            "name": "cap",
            "in": "query",
            "required": false,
            "schema": { "type": "number" }
          }
        ],
        "responses": {
          "200": {
            "description": "Coupon",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "coupon": { "type": "number" }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
